<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_marginTop="@dimen/list_row_gap_margin"
                                                   android:layout_marginBottom="@dimen/list_row_gap_margin"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ListViewMainText"
            android:id="@+id/neo_name_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="(2018 AA12)"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ListViewSubText"
            app:layout_constraintLeft_toLeftOf="@id/neo_name_tv"
            app:layout_constraintTop_toBottomOf="@id/neo_name_tv"
            android:id="@+id/neo_date_tv"
            tools:text="12-01-2018"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potentialHazardWarning_iv"
            android:src="@drawable/ic_alert_circle_24dp"
            android:tint="@color/colorErrorRed"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:contentDescription="@string/potential_hazard_warning"/>

</androidx.constraintlayout.widget.ConstraintLayout>
