<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/list_row_gap_margin"
        android:layout_marginBottom="@dimen/list_row_gap_margin">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_tv"
            tools:text="No hazard"
            style="@style/ListViewMainText"
            app:layout_constraintTop_toTopOf="@+id/icon_iv"
            android:layout_marginStart="@dimen/list_row_gap_margin"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub_tv"
            style="@style/ListViewSubText"
            tools:text="Object is not on collision course with Earth"
            app:layout_constraintTop_toBottomOf="@+id/header_tv"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
